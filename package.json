{
  "name": "w-theme",
  "description": "A theme schema designed for consistency and flexibility",
  "version": "0.0.1",
  "author": "Georges Boris",
  "license": "MPL-2.0",
  "homepage": "https://github.com/georgesboris/w-theme#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgesboris/w-theme.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    "./": "./dist/"
  },
  "bugs": {
    "url": "https://github.com/georgesboris/w-theme/issues"
  },
  "directories": {
    "example": "example"
  },
  "scripts": {
    "build": "npm run build:lib && npm run build:debugger",
    "build:lib": "esbuild ./src/index.js --bundle --minify --format=esm --outdir=dist",
    "build:debugger": "esbuild ./src/debugger --minify --bundle --outdir=dist"
  },
  "keywords": [
    "theme",
    "css",
    "variables",
    "design",
    "system",
    "tokens",
    "elm",
    "elm-widgets",
    "gleam",
    "lustre"
  ],
  "devDependencies": {
    "esbuild": "^0.20.2"
  }
}
